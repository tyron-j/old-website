//- side bar

div(class='left side-bar', ng-class='{ shown: sideBar.inUse, hidden: !sideBar.inUse }')
	div(class='side-bar-header')
		| {{ sideBar.title }}
		div(class='icon icon-bars')
	div(class='side-bar-item', ng-repeat='item in sideBar.items', ng-class='{ selected: item === sideBar.selectedItem }', ng-click='sideBar.selectItem(item)')
		| {{ item.title }}