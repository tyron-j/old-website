//- side bar

div(class='left side-bar', ng-class='{ shown: uiModel.inUse, hidden: !uiModel.inUse }')
	div(class='side-bar-header')
		| {{ uiModel.title }}
		div(class='icon icon-bars')
	div(class='side-bar-item', ng-repeat='item in uiModel.items', ng-class='{ selected: item === uiModel.selectedItem }', ng-click='uiModel.selectItem(item)')
		| {{ item.title }}