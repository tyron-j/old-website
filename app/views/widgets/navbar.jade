//- nav bar

div(class='nav-bar', ng-mouseover='navBar.inUse = true', ng-mouseleave='navBar.inUse = false')
	div(class='nav-bar-content', ng-class='{ shown: navBar.inUse, hidden: !navBar.inUse }')
		div(class='nav-bar-item', ng-repeat='item in navBar.items')
			a(ng-href='{{ item.href }}')
				| {{ item.title }}
			//- sub items
			div(class='nav-bar-expand', ng-if='item.subItems')
				div(class='nav-bar-sub-item', ng-repeat='subItem in item.subItems')
					a(ng-href='{{ subItem.href }}')
						| {{ subItem.title }}