//- nav bar

div(class='nav-bar',
	ng-class='{ master: model.masterMode }',
	ng-mouseover='model.inUse = true',
	ng-mouseleave='model.inUse = false')
	div(class='nav-bar-content',
		ng-class='{ shown: model.inUse, hidden: !model.inUse }')
		//- to-do: make this optional
		div(class='nav-bar-beacon')
			div(class='nav-bar-beacon-content')
			div(class='nav-bar-beacon-shadow')
		div(class='nav-bar-item',
			ng-repeat='item in model.items')
			a(ng-href='{{ item.href }}')
				| {{ item.title }}
			//- sub items
			div(class='nav-bar-expand',
				ng-if='item.subItems')
				div(class='nav-bar-sub-item',
					ng-repeat='subItem in item.subItems')
					a(ng-href='{{ subItem.href }}')
						| {{ subItem.title }}