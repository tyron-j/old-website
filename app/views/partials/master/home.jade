//- master home

div(class='home-news-list')
	div(class='home-news-list-header')
		| {{ homeNewsListHeader }}
		ui-button-bar(ui-model='headerButtonBar')
	div(class='home-news-list-content')
		div(class='home-news-list-scroll-content')
			div(class='home-news-list-item',
				ng-repeat='item in homeNewsListItems')
				div(class='home-news-list-item-image',
					ng-class='{ "preloader preloader-intersection": true }')
				div(class='home-news-list-item-content')
					ui-button-bar(ui-model='item.buttonBar')