//- master home

div(class='news-list')
	div(class='news-list-header')
		| {{ newsListHeader }}
		ui-button-bar(ui-model='headerButtonBar')
	div(class='news-list-content')
		div(class='news-list-scroll-content')
			div(class='news-list-item',
				ng-repeat='item in newsListItems')
				div(class='news-list-item-image',
					ng-class='{ "preloader preloader-intersection": !item.imageLoaded }')
					//- to-do: change the image fetch location
					img(ng-src='http://localhost:9000/api/image/home/{{ item.imageTitle }}',
						ng-class='{ horizontal: item.imageHorizontal, vertical: item.imageVertical }',
						ui-on-load='handleImageLoad(evt, item)')
				div(class='news-list-item-content')
					div(class='news-list-item-href')
						span(ng-if='!item.inEditMode')
							| {{ item.href }}
						input(type='text',
							ng-if='item.inEditMode',
							ng-model='item.href')
					ui-button-bar(ui-model='item.buttonBar')