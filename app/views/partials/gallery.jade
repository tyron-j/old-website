//- to-do: fix the scrollbar image offset
ui-modal-image(ui-model='modalImage')
div(class='gallery')
	div(class='image',
		ng-class='{ "preloader preloader-intersection": !image.loaded }',
		ng-repeat='image in images')
		img(ng-src='http://' + locationHost + '/api/image/gallery/{{ image.title }}',
			ng-click='modalImage.open(image.title, image.category)',
			ui-on-load='handleImageLoad(evt, image)')